<div class = "show-room">

    <div class = "show-room-action">
        <%= link_to "←戻る", :back, class:"back-link" %>
        <p><%= link_to "編集",[:edit, @room], class: "edit-link" %></p>
    </div>
    <div class = room-show-container>
        <%= image_tag @room.room_image.url, width: '600px', height: '400px' %>
        <div class = "room-box">
            <%= form_with model: @room do |f| %>
                <table>
                    <tr>
                        <th>施設名</th>
                        <td class = "show-room-name"><%= @room.name %></td>
                    </tr>
                    <tr>
                        <th>価格</th>
                        <td class = "show-room-price"><%= number_to_currency(@room.price, :unit => "¥", :format => "%u%n") %></td>
                    </tr>
                    <tr>
                        <th>住所</th>
                        <td><%= @room.address %></td>
                    </tr>
                    <tr>
                        <th>施設詳細</th>
                        <td><%= @room.introduction %></td>
                    </tr>
                </table>
            <% end %>
            <%= form_with model: @reservation, method: :post, url: reservations_confirm_path do |f| %>
                <div class = "reservation-container">
                    <div class = "reservation-box">
                        <div class = "reservation-form-item">
                            <%= f.label :check_in, "チェックイン" %>
                            <%= f.date_field :check_in, class: "reservation-field" %>
                        </div>
                        <div class = "reservation-form-item">
                            <%= f.label :check_out, "チェックアウト" %>
                            <%= f.date_field :check_out, class: "reservation-field" %>
                        </div>
                        <div class = "reservation-form-item">
                            <%= f.label :total_people, "人数" %>
                            <%= f.text_field :total_people, class: "reservation-field" %>
                        </div>
                    </div>

                    <p class = "alert"><%= flash[:alert] %></p>

                    <%= f.hidden_field :room_id, value: @room.id %>
                    <%= f.hidden_field :user_id, value: @user.id %> 

                    <%= f.submit "予約する", class: "reservation-button" %>
                </div>
            <% end %>
        </div>
    </div>
</div>
