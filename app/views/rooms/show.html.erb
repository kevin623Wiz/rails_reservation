<div class = "show-room">

<%= render "shared/search" %>

    <div class = "show-room-action">
        <%= link_to "←戻る", :back, class:"back-link" %>
        <p><%= link_to "編集",[:edit, @room], class: "edit-link" %></p>
    </div>
        <%= form_with model: @room do |f| %>
        <div class = room-show-container>
            <%= image_tag @room.room_image.url %>
            <div class = "room-box">
                <table>
                    <tr>
                        <th>施設名</th>
                        <td class = "show-room-name"><%= @room.name %></td>
                    </tr>
                    <tr>
                        <th>価格</th>
                        <td class = "show-room-price"><%= number_to_currency(@room.price, :unit => "¥", :format => "%u%n") %></td>
                    </tr>
                    <tr>
                        <th>住所</th>
                        <td><%= @room.address %></td>
                    </tr>
                    <tr>
                        <th>施設詳細</th>
                        <td><%= @room.introduction %></td>
                    </tr>
                </table>
                <div class = "reservation-form">
                <%= form_with model: @reservation, method: :post, url: room_reservations_confirm_path do |f| %>

                    <%= f.label :check_in, "チェックイン" %>
                    <%= f.date_field :check_in %>

                    <%= f.label :check_out, "チェックアウト" %>
                    <%= f.date_field :check_out %>

                    <%= f.label :total_people, "人数" %>
                    <%= f.text_field :total_people %>

                    <%= f.hidden_field :room_id, value: @room.id %>
                    <%= f.submit "予約する" %>
                <% end %>
                </div>
            </div>
        </div>
    <% end %>
</div>