<div class = "form-container">
    <h3>登録済み一覧</h3>

    <table>
        <thead>
            <tr>
                <th>画像</th>
                <th>施設名</th>
                <th>紹介文</th>
                <th>料金</th>
                <th>作成日</th>
            </tr>
        </thead>

        <tbody>
            <% @rooms.each do |room| %>
                <tr>
                    <td><%= room.introduction %></td>
                    <td><%= link_to "#{room.name}", room_path(room.id) %></td>
                    <td><%= room.introduction %></td>
                    <td><%= room.price %></td>
                    <td><%= room.create_at %></td>
                </tr>
            <% end %>
        </tbody>
    </table>
    
</div>
