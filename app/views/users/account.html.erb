<div class = "account-container">
    
    <h3>設定</h3>

    <div class = "account">
        <div class = "side-menu">
            <%= link_to "アカウント", users_account_path, class: "side-menu-item" %>
            <%= link_to "プロフィール", users_profile_path, class: "side-menu-item" %>
        </div>

        <div class = "account-info">
            <div class = "account-info-head">
                <h4>アカウント</h4>
                <%= link_to "編集", edit_user_registration_path, class: "edit-link" %>
            </div>
            <div class = "account-info-bottom">
                <table>
                    <tr class = "account-info-item">
                        <th>メールアドレス</th>
                        <td><%= current_user.email %></td>
                    </tr>
                    <tr class = "account-info-item">
                        <th>パスワード</th>
                        <td>********</td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
</div>
